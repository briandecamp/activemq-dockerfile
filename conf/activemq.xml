<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
  xmlns:amq="http://activemq.apache.org/schema/core" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd 
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <value>file:${activemq.base}/conf/credentials.properties</value>
    </property>
  </bean>
  
  <broker xmlns="http://activemq.apache.org/schema/core" 
    brokerName="amq01"
    useJmx="true"
    advisorySupport="true"
    splitSystemUsageForProducersConsumers="true" 
    cacheTempDestinations="true"
    persistent="false"
    dataDirectory="${activemq.base}/data">

  <destinationPolicy>
       <policyMap>
           <policyEntries>
              <policyEntry queue=">" producerFlowControl="true" optimizedDispatch="true">
                 <deadLetterStrategy>
                     <!-- Use the prefix 'DLQ.' for the destination name, and make the DLQ a queue rather than a topic -->
                     <individualDeadLetterStrategy queuePrefix="DLQ." useQueueForQueueMessages="true" />
                 </deadLetterStrategy>
              </policyEntry>
           </policyEntries>
        </policyMap>
    </destinationPolicy>

    <managementContext>
      <managementContext connectorPort="1099" createConnector="true"/>
    </managementContext>

    <networkConnectors>
      <networkConnector name="nc1" 
        uri="discovery://(multicast://brokers)" 
        dynamicOnly="true"
        conduitSubscriptions="false"
        decreaseNetworkConsumerPriority="true"/>
    </networkConnectors>

    <plugins>
      <loggingBrokerPlugin/>

      <!-- visualization plugins may use Graphviz for generating graphics 
      <connectionDotFilePlugin file="${activemq.base}/data/ActiveMQConnections.dot"/>
      <destinationDotFilePlugin file="${activemq.base}/data/ActiveMQDestinations.dot"/>
-->
      
      <!-- statistics plugin required for the QueueWaitService -->
      <statisticsBrokerPlugin/>
    </plugins>
    
    <systemUsage>
      <systemUsage sendFailIfNoSpaceAfterTimeout="300">
        <memoryUsage>
          <memoryUsage limit="5734 mb"/>
        </memoryUsage>
        <storeUsage>
          <storeUsage limit="28670 mb"/>
        </storeUsage>
        <tempUsage>
          <tempUsage limit="28670 mb"/>
        </tempUsage>
      </systemUsage>
    </systemUsage>
    
    <transportConnectors>
      <!-- Client connections -->
      <transportConnector name="openwire-clients" 
        uri="tcp://localhost:61616" 
        discoveryUri="multicast://clients" 
        enableStatusMonitor="true"/>
      
      <!-- Broker connections -->
      <transportConnector name="openwire-brokers"
        uri="tcp://localhost:61617"
        discoveryUri="multicast://brokers" 
        enableStatusMonitor="true"/>
    </transportConnectors>
  </broker>
  
  <import resource="jetty.xml"/>
</beans>

